<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             x:Class="TestApp.Views.MainPage">
    <StackLayout VerticalOptions="FillAndExpand" Spacing="0">
        <maps:Map WidthRequest="960"  x:Name="MyMap" VerticalOptions="FillAndExpand" IsShowingUser="true" MapType="Hybrid" />
        <StackLayout Spacing="30" HorizontalOptions="CenterAndExpand" Orientation="Horizontal">
            <Button Text="Street" Command="{Binding StreetViewCommand}" />
            <Button Text="Hybrid" Command="{Binding HybridViewCommand}" />
            <Button Text="Satellite" Command="{Binding SatelliteViewCommand}" />
        </StackLayout>
    </StackLayout>
</ContentPage>
